<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ru.blogspot.feomatr.entity">
    <class name="Transaction" table="TRANSACTION">
        <id name="id" column="transaction_id" type="java.lang.Long">
            <generator class="native"/>
        </id>
        <property name="amount" type="java.lang.Long" column="amount"/>
        <many-to-one name="sender" class="Account" fetch="join" insert="false" update="false">
            <column name="account_id" not-null="false"/>
        </many-to-one>
        <many-to-one name="receiver" class="Account" fetch="select" insert="false" update="false">
            <column name="account_id" not-null="false"/>
        </many-to-one>
        <property name="time"
                  type="org.jadira.usertype.dateandtime.joda.PersistentDateTime"
                  not-null="true" column="dateTime"/>
    </class>
</hibernate-mapping>
