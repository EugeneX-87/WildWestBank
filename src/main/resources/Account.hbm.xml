<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ru.blogspot.feomatr.entity">
	<class name="Account" table="accounts" lazy="false">
		<id name="id" column="id" type="java.lang.Long" unsaved-value="null">
			<generator class="native" />
		</id>
		<many-to-one name="owner" class="Client" fetch="select">
			<column name="clientId" not-null="true" />
		</many-to-one>

		<property name="balance" type="java.lang.Long" column="balance" />

	</class>
</hibernate-mapping>
