<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <!-- Bean declaration go here. -->

    <!--todo Split configuration to few files: dao-context, services-context, etc. -->

     <!--DAO Beans-->
    <bean id="clientDaoHibImpl" class="ru.blogspot.feomatr.dao.hibernate.ClientDaoHibImpl"/>
    <bean id="accountDaoHibImpl" class="ru.blogspot.feomatr.dao.hibernate.AccountDaoHibImpl"/>
    <bean id="transactionDaoHibImpl" class="ru.blogspot.feomatr.dao.hibernate.TransactionDaoHibImpl"/>

    <!--Services-->
    <bean id="clientServiceImpl" class="ru.blogspot.feomatr.service.ClientServiceImpl">
        <constructor-arg ref="clientDaoHibImpl"/>
    </bean>

    <bean id="accountServiceImpl" class="ru.blogspot.feomatr.service.AccountServiceImpl">
        <constructor-arg ref="accountDaoHibImpl"/>
    </bean>

    <bean id="transactionServiceImpl" class="ru.blogspot.feomatr.service.TransactionServiceImpl">
        <constructor-arg ref="transactionDaoHibImpl"/>
    </bean>

    <bean id="transferServiceImpl" class="ru.blogspot.feomatr.service.TransferServiceImpl">
        <constructor-arg ref="accountServiceImpl"/>
        <constructor-arg ref="transactionServiceImpl"/>
    </bean>

    <!--Controllers-->
    <bean id="clientListController" class="ru.blogspot.feomatr.controller.ClientListController">
        <constructor-arg ref="clientServiceImpl"/>
        <constructor-arg ref="accountServiceImpl"/>
    </bean>

    <bean id="accountsController" class="ru.blogspot.feomatr.controller.AccountsController">
        <constructor-arg ref="accountServiceImpl"/>
        <constructor-arg ref="transferServiceImpl"/>
    </bean>

    <bean id="transactionsController" class="ru.blogspot.feomatr.controller.TransactionsController">
        <constructor-arg ref="transactionServiceImpl"/>
    </bean>

