<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ru.blogspot.feomatr.entity">
	<class name="Transaction" table="transactions" lazy="false">
		<id name="id" column="id" type="java.lang.Long" unsaved-value="null">
			<generator class="native" />
		</id>
		<property name="amount" type="java.lang.Long" column="amount" />
		<many-to-one name="sender" class="Account" fetch="select">
			<column name="senderId" not-null="false" />
		</many-to-one>
		<many-to-one name="reciver" class="Account" fetch="select">
			<column name="reciverId" not-null="false" />
		</many-to-one>
		<property name="time"
			type="org.jadira.usertype.dateandtime.joda.PersistentDateTime"
			not-null="true" column="dateTime" />
	</class>
</hibernate-mapping>
