<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Bean declaration go here. -->

	<bean id="clientService" class="ru.blogspot.feomatr.service.ClientServiceImpl">
		<constructor-arg ref="clientDaoHibImpl" />
	</bean>

	<bean id="initTestData" class="ru.blogspot.feomatr.dao.hibernate.InitTestData"
		scope="singleton" />

	<bean id="clientDaoHibImpl" class="ru.blogspot.feomatr.dao.hibernate.ClientDaoHibImpl" />

	<bean id="clientDaoStub " class="ru.blogspot.feomatr.dao.stub.ClientDaoStubImpl" />

	<bean id="accountService" class="ru.blogspot.feomatr.service.AccountServiceImpl">
		<constructor-arg ref="accountDaoHib" />
	</bean>

	<bean id="accountDaoStub" class="ru.blogspot.feomatr.dao.stub.AccountDaoStubImpl" />

	<bean id="accountDaoHib" class="ru.blogspot.feomatr.dao.hibernate.AccountDaoHibImpl" />

	<bean id="transactionService" class="ru.blogspot.feomatr.service.TransactionServiceImpl">
		<constructor-arg ref="transactionDaoHib" />
	</bean>

	<bean id="transactionDaoStub" class="ru.blogspot.feomatr.dao.stub.TransactionDaoStubImpl" />
	<bean id="transactionDaoHib" class="ru.blogspot.feomatr.dao.hibernate.TransactionDaoHibImpl" />
</beans>